@using ContentModels = Umbraco.Web.PublishedModels
@model Umbraco.Core.Models.Blocks.BlockListItem

@{
    var block = Model.Content as ContentModels.ContentBlockImage;
}

<figure>
    <img src="@block.Image.Url()" alt="@block.ImageCaption">
    <figcaption>@block.ImageCaption</figcaption>
</figure>